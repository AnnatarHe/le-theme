circle-size = 1rem

// .--le-switch-container

.--le-switch-display 
    margin-left 1rem

.--le-switch-bar-container
    position relative
    cursor pointer

.--le-switch-bar
    width 3rem
    height .5rem
    border-radius .3rem
    background-color teal

.--le-switch-pointer
    display flex
    position absolute
    top -4px
    left 0
    background-color deeppink
    width circle-size
    height circle-size
    border-radius 100%
    transition all .35s

.--le-switch-pointer-left
    transform translateX(0rem)

.--le-switch-pointer-right
    transform translateX(3rem - circle-size / 2)
