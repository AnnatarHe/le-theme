@import '../../styles/variables'

.--le-button
    &-container
        border 0
        cursor pointer
        transition all .35s ease
        box-shadow none
    &-ghost
        background-color transparent
        &:hover
            background-color rgba(255, 255, 255, .7)
    &-success
        background-color $color-success
        color $blue
        &:hover
            background-color darken($color-success, 10%)
    &-error
        background-color $red
        color #fff
        &:hover
            background-color darken($red, 10%)
    &-large
        padding 1rem 2rem
    &-normal
        padding .5rem 1rem
    &-fill
        width 100%
        height 100%
    &-small
        padding .2rem .4rem
    &-rangle
        border-radius 0
    &-radius
        border-radius .5rem
    &-circle
        border-radius 100%